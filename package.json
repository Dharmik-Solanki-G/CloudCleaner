{
  "name": "cloudcleaner",
  "version": "0.1.0",
  "description": "AI-powered PC optimization, cache cleaning & security audit software",
  "main": "dist-electron/main.js",
  "author": {
    "name": "CloudCleaner",
    "email": "support@cloudcleaner.app"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "tsc && vite build && electron-builder --win",
    "build:dir": "tsc && vite build && electron-builder --win --dir",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7",
    "lucide-react": "^0.294.0",
    "date-fns": "^2.30.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.cloudcleaner.app",
    "productName": "CloudCleaner",
    "copyright": "Copyright Â© 2026 CloudCleaner",
    "asar": false,
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "python/dist/engine.exe",
        "to": "bin/engine.exe"
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "dir",
      "icon": "public/icon.png"
    },
    "publish": {
      "provider": "generic",
      "url": "https://updates.cloudcleaner.app/releases"
    }
  }
}